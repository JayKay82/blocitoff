.user-form
  %h2 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .form-group
      = f.label :name
      %br/
      = f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Enter your full name'
    .form-group
      = f.label :email
      %br/
      = f.email_field :email, class: 'form-control', placeholder: 'Enter your email address'
    .form-group
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Enter a password'
    .form-group
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Enter password confirmation'
    .form-group
      = f.submit "Sign up", class: 'btn btn-success'
  = render "devise/shared/links"
